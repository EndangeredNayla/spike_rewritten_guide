@{
    ViewData["Title"] = "Contact";
}

<link rel="stylesheet" href="~/css/contact.css" />

<div class="panel">
    <div class="panel-content">
        <!-- <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSf8bGO8Y4zVf2rRw6AUjP52g6safsLokum9N8lN-_UWVVavYg/viewform?embedded=true"
            width="900px" height="1200px" frameborder="0" marginheight="0" marginwidth="0">Loading...</iframe> -->
        <h1>Send Spike a Message!</h1>
        <p>
            Page under construction. For now, send all inquiries directly to <b>spikes.rewritten.guide@gmail.com</b> or fill out this
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSf8bGO8Y4zVf2rRw6AUjP52g6safsLokum9N8lN-_UWVVavYg/viewform?usp=sf_link" target="_blank">Google Form</a>
        </p>
        <form id="contactform">
            <label>Toon Name<span style="color:red;"> * </span></label>
            <input type="text" id="tname" placeholder="Please tell me your toon's name!">
            <label>Toon Species</label>
            <select id="toontype">
            <option value="cat">Cat</option>
            <option value="dog">Dog</option>
            <option value="rabbit">Rabbit</option>
            <option value="horse">Horse</option>
            <option value="monkey">Monkey</option>
            <option value="mouse">Mouse</option>
            <option value="duck">Duck</option>
            <option value="pig">Pig</option>
            <option value="bear">Bear</option>
            <option value="deer">Deer</option>
            <option value="crocodile">Crocodile</option>
            </select>
            <label>Email Address<span style="color:red;"> * </span></label>
            <input type="email" id="returnaddr" placeholder="Please tell me your email so I can respond!">
            <label>Message<span style="color:red;"> * </span></label>
            <textarea id="message" placeholder="Type your message here!" style="height:200px"></textarea>
            <button type="submit" id="submit">Submit</button>
        </form>
    </div>
</div>
